{% liquid 
  assign block = mega-menu

  assign block_grid_cols = '1fr'
  assign links_grid_cols = 'repeat(5, 1fr)'
  assign has_promos = false
  
  if block.settings.mega_image_1 != blank or block.settings.mega_image_2 != blank
    assign has_promos = true
  endif
  
  if link.links.size > 0 and block.settings.mega_image_1 != blank and block.settings.mega_image_2 != blank
    assign block_grid_cols = '2fr 1fr 1fr'
    assign links_grid_cols = 'repeat(3, 1fr)'
  elsif link.links.size > 0 and block.settings.mega_image_1 != blank or block.settings.mega_image_2 != blank
    assign block_grid_cols = '2fr 1fr'
    assign links_grid_cols = 'repeat(4, 1fr)'
  elsif link.links.size == 0 and block.settings.mega_image_1 != blank or block.settings.mega_image_2 != blank
    assign block_grid_cols = 'repeat(5, 1fr)'
  endif
  
  assign emojis = 'ğŸ¨,ğŸŒˆ,ğŸ’–,â­,ğŸ¦‹,âœ¨,ğŸ,ğŸ‘•' | split: ','
%}

{% style %}
  /* Grid Layout */
  [data-mega-menu-block-id="{{ block.id }}"] {
    grid-template-columns: {{ block_grid_cols }};
  }

  [data-mega-menu-block-id="{{ block.id }}"] .mega-menu--links {
    grid-template-columns: {{ links_grid_cols }};
  }

  /* Promo Text Colors */
  .mega-menu-block .block-id-{{ block.id }} .overlay-text-on-image-promo-1,
  .mega-menu-block .block-id-{{ block.id }} .overlay-text-on-image-promo-1 a:hover {
    color: {{ block.settings.overlay_text_color_promo_1 }} !important;
  }

  .mega-menu-block .block-id-{{ block.id }} .overlay-text-on-image-promo-2,
  .mega-menu-block .block-id-{{ block.id }} .overlay-text-on-image-promo-2 a:hover {
    color: {{ block.settings.overlay_text_color_promo_2 }} !important;
  }
  
  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     EMERSON PREMIUM MEGA MENU STYLES
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  
  [data-mega-menu-block-id="{{ block.id }}"] {
    background: white !important;
    border-radius: 20px !important;
    box-shadow: 0 20px 60px rgba(31, 26, 20, 0.15) !important;
    border: 1px solid #E8E2DB !important;
    padding: 32px 40px !important;
    animation: emersonMegaFadeIn 0.35s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  
  @keyframes emersonMegaFadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Links Grid Spacing */
  [data-mega-menu-block-id="{{ block.id }}"] .mega-menu--links {
    gap: 40px !important;
  }
  
  /* Column Header with Emoji */
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-column-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 2px solid #FFE5EC;
    position: relative;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-column-header::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 30px;
    height: 2px;
    background: #E85D75;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-emoji {
    font-size: 20px;
    line-height: 1;
  }
  
  /* Category Titles */
  [data-mega-menu-block-id="{{ block.id }}"] .mega-menu-link--title {
    font-family: 'DM Sans', -apple-system, sans-serif !important;
    font-size: 14px !important;
    font-weight: 600 !important;
    color: #1F1A14 !important;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0 !important;
    padding: 0 !important;
    border: none !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .mega-menu-link--title a {
    color: inherit !important;
    text-decoration: none !important;
    transition: color 0.2s ease !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .mega-menu-link--title a:hover {
    color: #E85D75 !important;
  }
  
  /* Sub Links */
  [data-mega-menu-block-id="{{ block.id }}"] .menu-link {
    list-style: none !important;
    padding: 0 !important;
    margin: 0 !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .menu-link li {
    margin-bottom: 10px !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .menu-link li a {
    font-family: 'DM Sans', -apple-system, sans-serif !important;
    font-size: 14px !important;
    font-weight: 400 !important;
    color: #756758 !important;
    text-decoration: none !important;
    display: inline-block;
    padding: 4px 0;
    transition: all 0.2s ease !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .menu-link li a:hover {
    color: #E85D75 !important;
    padding-left: 6px;
  }
  
  /* View All Link */
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-view-all {
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px dashed #E8E2DB;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-view-all a {
    font-weight: 500 !important;
    color: #E85D75 !important;
    font-size: 13px !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-view-all a:hover {
    color: #1F1A14 !important;
  }
  
  /* Promo Cards */
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-promo-card {
    border-radius: 16px !important;
    overflow: hidden !important;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-promo-card:hover {
    transform: translateY(-4px) !important;
    box-shadow: 0 8px 30px rgba(31, 26, 20, 0.12) !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-promo-card img {
    transition: transform 0.5s ease !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-promo-card:hover img {
    transform: scale(1.05) !important;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-promo-text {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, transparent 100%);
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-promo-title {
    font-family: 'DM Sans', sans-serif;
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 4px 0;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-promo-subtitle {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    margin: 0;
    opacity: 0.9;
  }
  
  /* CTA Banner */
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-cta-banner {
    grid-column: 1 / -1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    margin-top: 24px;
    padding: 16px 24px;
    background: linear-gradient(135deg, #FFF5F7 0%, #FDF9F6 100%);
    border-radius: 12px;
    border: 1px dashed #E85D75;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-cta-emoji {
    font-size: 24px;
    animation: emersonBounce 2s infinite;
  }
  
  @keyframes emersonBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-4px); }
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-cta-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    color: #1F1A14;
    font-weight: 500;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-cta-btn {
    display: inline-flex;
    align-items: center;
    padding: 8px 20px;
    background: #E85D75;
    color: white !important;
    font-family: 'DM Sans', sans-serif;
    font-size: 13px;
    font-weight: 600;
    text-decoration: none !important;
    border-radius: 50px;
    transition: all 0.3s ease;
  }
  
  [data-mega-menu-block-id="{{ block.id }}"] .emerson-cta-btn:hover {
    background: #D64D65;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(232, 93, 117, 0.3);
  }
{% endstyle %}


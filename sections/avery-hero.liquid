      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "7"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Years Old"
        }
      ]
    }
  ],
  "presets": [

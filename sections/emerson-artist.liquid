<section class="emerson-artist" id="meet-avery">
  <div class="emerson-artist__container">
    
    <!-- Image Side -->
    <div class="emerson-artist__image-wrapper" data-aos="fade-right">
      {% if section.settings.image != blank %}
        <div class="emerson-artist__image">
          {{ section.settings.image | image_url: width: 800 | image_tag: 
            loading: 'lazy',
            class: 'emerson-artist__img',
            alt: section.settings.image.alt | default: 'Avery the artist'
          }}
        </div>
      {% else %}
        <div class="emerson-artist__image emerson-artist__image--placeholder">
          <div class="emerson-artist__placeholder">
            <span class="emerson-artist__placeholder-emoji">ðŸ‘§ðŸŽ¨</span>
            <span class="emerson-artist__placeholder-text">Avery in her studio</span>
          </div>
        </div>
      {% endif %}
      
      <!-- Floating Badge -->
      {% if section.settings.show_badge %}
        <div class="emerson-artist__badge">
          <span class="emerson-artist__badge-icon">{{ section.settings.badge_icon }}</span>
          <div class="emerson-artist__badge-content">
            <span class="emerson-artist__badge-title">{{ section.settings.badge_title }}</span>
            <span class="emerson-artist__badge-subtitle">{{ section.settings.badge_subtitle }}</span>
          </div>
        </div>
      {% endif %}
      
      <!-- Decorative Elements -->
      <div class="emerson-artist__decor emerson-artist__decor--1">âœ¨</div>
      <div class="emerson-artist__decor emerson-artist__decor--2">ðŸŽ¨</div>
    </div>
    
    <!-- Content Side -->
    <div class="emerson-artist__content" data-aos="fade-left">
      
      {% if section.settings.tag != blank %}
        <span class="emerson-artist__tag">{{ section.settings.tag }}</span>
      {% endif %}
      
      {% if section.settings.heading != blank %}
        <h2 class="emerson-artist__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.text_1 != blank %}
        <p class="emerson-artist__text">{{ section.settings.text_1 }}</p>
      {% endif %}
      
      {% if section.settings.text_2 != blank %}
        <p class="emerson-artist__text">{{ section.settings.text_2 }}</p>
      {% endif %}
      
      {% if section.settings.text_3 != blank %}
        <p class="emerson-artist__text">{{ section.settings.text_3 }}</p>
      {% endif %}
      
      {% if section.settings.signature != blank %}
        <div class="emerson-artist__signature">{{ section.settings.signature }}</div>
      {% endif %}
      
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="emerson-artist__btn">
          {{ section.settings.button_label }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      {% endif %}
      
    </div>
    
  </div>
</section>

<script>
  // Simple fade-in animation on scroll
  document.addEventListener('DOMContentLoaded', function() {
    const storySection = document.querySelector('.emerson-artist');
    if (!storySection) return;
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('emerson-artist--visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });
    
    observer.observe(storySection);
  });
</script>


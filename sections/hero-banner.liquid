{%- style -%}
#emerson-hero-{{ section.id }} {
  --section-padding-top: {{ section.settings.padding_top }}px;
  --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
  --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  --content-max-width: {{ section.settings.content_max_width }}px;
  --section-max-width: {{ section.settings.section_max_width }}px;
  --section-min-height: {{ section.settings.section_min_height }}vh;
  --content-gap: {{ section.settings.content_gap }}px;
  --section-bg: {{ section.settings.bg_color }};
  --heading-color: {{ section.settings.heading_color }};
  --text-color: {{ section.settings.text_color }};
  --eyebrow-color: {{ section.settings.eyebrow_color }};
  --badge-bg: {{ section.settings.badge_bg_color }};
  --badge-text: {{ section.settings.badge_text_color }};
  --eyebrow-size-desktop: {{ section.settings.eyebrow_size_desktop }}px;
  --eyebrow-size-mobile: {{ section.settings.eyebrow_size_mobile }}px;
  --eyebrow-weight: {{ section.settings.eyebrow_weight }};
  --heading-size-desktop: {{ section.settings.heading_size_desktop }}px;
  --heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
  --heading-weight: {{ section.settings.heading_weight }};
  --subheading-size-desktop: {{ section.settings.subheading_size_desktop }}px;
  --subheading-size-mobile: {{ section.settings.subheading_size_mobile }}px;
  --subheading-weight: {{ section.settings.subheading_weight }};
  --subheading-max-width: {{ section.settings.subheading_max_width }}px;
  --btn-primary-bg: {{ section.settings.btn_primary_bg }};
  --btn-primary-text: {{ section.settings.btn_primary_text_color }};
  --btn-primary-bg-hover: {{ section.settings.btn_primary_bg_hover }};
  --btn-font-size: {{ section.settings.btn_font_size }}px;
  --btn-font-weight: {{ section.settings.btn_font_weight }};
  --btn-padding-x: {{ section.settings.btn_padding_x }}px;
  --btn-padding-y: {{ section.settings.btn_padding_y }}px;
  --btn-border-radius: {{ section.settings.btn_border_radius }}px;
  --btn-secondary-bg: {{ section.settings.btn_secondary_bg }};
  --btn-secondary-text: {{ section.settings.btn_secondary_text_color }};
  --btn-secondary-border: {{ section.settings.btn_secondary_border }};
  --blob-1-color: {{ section.settings.blob_1_color }};
  --blob-2-color: {{ section.settings.blob_2_color }};
  --blob-3-color: {{ section.settings.blob_3_color }};
  --blob-1-size: {{ section.settings.blob_1_size }}px;
  --blob-2-size: {{ section.settings.blob_2_size }}px;
  --blob-3-size: {{ section.settings.blob_3_size }}px;
  --stats-number-size: {{ section.settings.stats_number_size }}px;
  --stats-number-weight: {{ section.settings.stats_number_weight }};
  --stats-number-color: {{ section.settings.stats_number_color }};
  --stats-label-size: {{ section.settings.stats_label_size }}px;
  --stats-label-color: {{ section.settings.stats_label_color }};
  --stats-gap: {{ section.settings.stats_gap }}px;
  --image-max-width: {{ section.settings.image_max_width }}px;
  --image-border-radius: {{ section.settings.image_border_radius }}px;
  --badge-font-size: {{ section.settings.badge_font_size }}px;
  --badge-padding-x: {{ section.settings.badge_padding_x }}px;
  --badge-padding-y: {{ section.settings.badge_padding_y }}px;
  --badge-border-radius: {{ section.settings.badge_border_radius }}px;
}
{%- endstyle -%}

<section id="emerson-hero-{{ section.id }}" class="emerson-hero {% if section.settings.full_width %}emerson-hero--full-width{% endif %}">
  {%- if section.settings.show_blobs -%}
  <div class="emerson-hero__blobs" aria-hidden="true">
    <div class="emerson-hero__blob emerson-hero__blob--1"></div>
    <div class="emerson-hero__blob emerson-hero__blob--2"></div>
    <div class="emerson-hero__blob emerson-hero__blob--3"></div>
  </div>
  {%- endif -%}

  {%- if section.settings.show_sparkles -%}
  <div class="emerson-hero__sparkles" aria-hidden="true">
    {%- assign sparkles = section.settings.sparkle_emojis | split: ',' -%}
    {%- for sparkle in sparkles -%}
    <span class="emerson-hero__sparkle" style="--sparkle-index: {{ forloop.index }};">{{ sparkle | strip }}</span>
    {%- endfor -%}
  </div>
  {%- endif -%}

  <div class="emerson-hero__container">
    <div class="emerson-hero__content" style="text-align: {{ section.settings.content_alignment }};">
      {%- if section.settings.show_badge and section.settings.badge_text != blank -%}
      <div class="emerson-hero__badge" data-animate="fade-up">
        <span class="emerson-hero__badge-dot"></span>
        {{ section.settings.badge_text }}
      </div>
      {%- endif -%}

      {%- if section.settings.eyebrow != blank -%}
      <span class="emerson-hero__eyebrow" data-animate="fade-up">{{ section.settings.eyebrow }}</span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
      <h1 class="emerson-hero__title" data-animate="fade-up">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
      <p class="emerson-hero__subtitle" data-animate="fade-up">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.btn_primary_text != blank or section.settings.btn_secondary_text != blank -%}
      <div class="emerson-hero__buttons" data-animate="fade-up">
        {%- if section.settings.btn_primary_text != blank -%}
        <a href="{{ section.settings.btn_primary_link }}" class="emerson-hero__btn emerson-hero__btn--primary">
          <span>{{ section.settings.btn_primary_text }}</span>
          {%- if section.settings.btn_show_arrow -%}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
          {%- endif -%}
        </a>
        {%- endif -%}
        {%- if section.settings.btn_secondary_text != blank -%}
        <a href="{{ section.settings.btn_secondary_link }}" class="emerson-hero__btn emerson-hero__btn--secondary">
          <span>{{ section.settings.btn_secondary_text }}</span>
        </a>
        {%- endif -%}
      </div>
      {%- endif -%}

      {%- if section.settings.show_stats -%}
      {%- assign stat_blocks = section.blocks | where: 'type', 'stat' -%}
      {%- if stat_blocks.size > 0 -%}
      <div class="emerson-hero__stats" data-animate="fade-up">
        {%- for block in stat_blocks -%}
        <div class="emerson-hero__stat" {{ block.shopify_attributes }}>
          <span class="emerson-hero__stat-number">{{ block.settings.number }}{{ block.settings.suffix }}</span>
          <span class="emerson-hero__stat-label">{{ block.settings.label }}</span>
        </div>
        {%- endfor -%}
      </div>
      {%- endif -%}
      {%- endif -%}
    </div>

    <div class="emerson-hero__image-wrapper" data-animate="fade-left">
      {%- if section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 1200 | image_tag: class: 'emerson-hero__image', loading: 'eager' }}
      {%- else -%}
      <div class="emerson-hero__image-placeholder">
        <svg class="emerson-hero__heart-svg" viewBox="0 0 200 180">
          <defs><linearGradient id="heartGradient-{{ section.id }}" x1="0%" y1="0%" x2="100%" y2="100%"><stop offset="0%" style="stop-color:{{ section.settings.heart_color_1 }}" /><stop offset="100%" style="stop-color:{{ section.settings.heart_color_2 }}" /></linearGradient></defs>
          <path d="M100 170 C20 100 0 60 30 30 C60 0 100 20 100 50 C100 20 140 0 170 30 C200 60 180 100 100 170Z" fill="url(#heartGradient-{{ section.id }})"/>
        </svg>
      </div>
      {%- endif -%}

      {%- if section.settings.show_floating_products -%}
      {%- assign product_blocks = section.blocks | where: 'type', 'floating_product' -%}
      {%- if product_blocks.size > 0 -%}
      <div class="emerson-hero__floating-products" aria-hidden="true">
        {%- for block in product_blocks -%}
        <div class="emerson-hero__floating-card emerson-hero__floating-card--{{ forloop.index }}" {{ block.shopify_attributes }}>
          {%- if block.settings.product_image != blank -%}
          {{ block.settings.product_image | image_url: width: 120 | image_tag }}
          {%- else -%}
          <span class="emerson-hero__floating-emoji">{{ block.settings.emoji }}</span>
          {%- endif -%}
          {%- if block.settings.product_name != blank -%}<span class="emerson-hero__floating-name">{{ block.settings.product_name }}</span>{%- endif -%}
          {%- if block.settings.product_price != blank -%}<span class="emerson-hero__floating-price">{{ block.settings.product_price }}</span>{%- endif -%}
        </div>
        {%- endfor -%}
      </div>
      {%- endif -%}
      {%- endif -%}
    </div>
  </div>

  {%- if section.settings.show_scroll_indicator -%}
  <div class="emerson-hero__scroll" data-animate="fade-up">
    <span>{{ section.settings.scroll_text }}</span>
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
  </div>
  {%- endif -%}
</section>


            <defs>
              <linearGradient id="heartGradient-{{ section.id }}" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:{{ section.settings.heart_color_1 }}" />
                <stop offset="100%" style="stop-color:{{ section.settings.heart_color_2 }}" />
              </linearGradient>
            </defs>
            <path d="M100 170 C20 100 0 60 30 30 C60 0 100 20 100 50 C100 20 140 0 170 30 C200 60 180 100 100 170Z" fill="url(#heartGradient-{{ section.id }})"/>
          </svg>
        </div>
      {%- endif -%}

      {%- if section.settings.show_floating_products -%}

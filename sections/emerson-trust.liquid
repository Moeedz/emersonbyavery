{% comment %}EMERSON BY AVERY ‚Äî TRUST BAR{% endcomment %}
{{ 'section-emerson-trust.css' | asset_url | stylesheet_tag }}
{{ 'emerson-animations.css' | asset_url | stylesheet_tag }}

{%- style -%}
#emerson-trust-{{ section.id }} {
  --section-padding-top: {{ section.settings.padding_top }}px;
  --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
  --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  --section-max-width: {{ section.settings.section_max_width }}px;
  --section-bg: {{ section.settings.bg_color }};
  --card-bg: {{ section.settings.card_bg_color }};
  --card-border: {{ section.settings.card_border_color }};
  --card-border-radius: {{ section.settings.card_border_radius }}px;
  --icon-color: {{ section.settings.icon_color }};
  --icon-bg: {{ section.settings.icon_bg_color }};
  --title-color: {{ section.settings.title_color }};
  --subtitle-color: {{ section.settings.subtitle_color }};
  --grid-columns: {{ section.settings.columns_desktop }};
  --grid-columns-mobile: {{ section.settings.columns_mobile }};
  --grid-gap: {{ section.settings.grid_gap }}px;
  --icon-size: {{ section.settings.icon_size }}px;
  --title-size: {{ section.settings.title_size }}px;
  --subtitle-size: {{ section.settings.subtitle_size }}px;
  --card-padding: {{ section.settings.card_padding }}px;
}
{%- endstyle -%}

<section id="emerson-trust-{{ section.id }}" class="emerson-trust">
  <div class="emerson-trust__container">
    <div class="emerson-trust__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'trust_item' -%}
            <div class="emerson-trust__card" {{ block.shopify_attributes }}>
              <div class="emerson-trust__icon">
                {%- if block.settings.custom_icon != blank -%}
                {{ block.settings.custom_icon | image_url: width: 80 | image_tag }}
                {%- else -%}
                <span>{{ block.settings.emoji }}</span>
                {%- endif -%}
              </div>
              <div class="emerson-trust__content">
                {%- if block.settings.title != blank -%}<h3 class="emerson-trust__title">{{ block.settings.title }}</h3>{%- endif -%}
                {%- if block.settings.subtitle != blank -%}<p class="emerson-trust__subtitle">{{ block.settings.subtitle }}</p>{%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>


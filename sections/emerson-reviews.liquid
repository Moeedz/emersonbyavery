{% comment %}
  EMERSON BY AVERY ‚Äî REVIEWS SECTION
  Premium customer reviews display
{% endcomment %}

{{ 'section-emerson-reviews.css' | asset_url | stylesheet_tag }}

<section class="emerson-reviews">
  <div class="emerson-reviews__container">
    
    <!-- Header -->
    <div class="emerson-reviews__header">
      <div class="emerson-reviews__header-left">
        {% if section.settings.heading != blank %}
          <h2 class="emerson-reviews__heading">{{ section.settings.heading }}</h2>
        {% endif %}
        <div class="emerson-reviews__summary">
          <div class="emerson-reviews__stars">
            {% for i in (1..5) %}
              <span class="emerson-reviews__star">‚òÖ</span>
            {% endfor %}
          </div>
          <span class="emerson-reviews__rating">{{ section.settings.rating }}</span>
          <span class="emerson-reviews__count">based on {{ section.settings.review_count }} reviews</span>
        </div>
      </div>
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="emerson-reviews__btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
    
    <!-- Reviews Grid -->
    <div class="emerson-reviews__grid">
      {% for block in section.blocks %}
        <div class="emerson-reviews__card" {{ block.shopify_attributes }} style="--delay: {{ forloop.index0 | times: 0.15 }}s">
          
          <div class="emerson-reviews__card-header">
            <div class="emerson-reviews__reviewer">
              <div class="emerson-reviews__avatar" style="background: {{ block.settings.avatar_color | default: '#FFD6DD' }};">
                {{ block.settings.reviewer_name | slice: 0 }}
              </div>
              <div class="emerson-reviews__reviewer-info">
                <span class="emerson-reviews__reviewer-name">{{ block.settings.reviewer_name }}</span>
                {% if block.settings.verified %}
                  <span class="emerson-reviews__verified">‚úì Verified Buyer</span>
                {% endif %}
              </div>
            </div>
            <div class="emerson-reviews__card-stars">
              {% assign star_count = block.settings.stars | default: 5 %}
              {% for i in (1..star_count) %}
                <span class="emerson-reviews__star emerson-reviews__star--filled">‚òÖ</span>
              {% endfor %}
            </div>
          </div>
          
          {% if block.settings.review_text != blank %}
            <p class="emerson-reviews__text">"{{ block.settings.review_text }}"</p>
          {% endif %}
          
          {% if block.settings.product_name != blank %}
            <div class="emerson-reviews__product">
              <div class="emerson-reviews__product-img">
                {% if block.settings.product_image != blank %}
                  {{ block.settings.product_image | image_url: width: 100 | image_tag: loading: 'lazy' }}
                {% else %}
                  {{ block.settings.product_emoji | default: 'üåà‚ù§Ô∏è' }}
                {% endif %}
              </div>
              <div class="emerson-reviews__product-info">
                <span class="emerson-reviews__product-name">{{ block.settings.product_name }}</span>
                {% if block.settings.product_variant != blank %}
                  <span class="emerson-reviews__product-variant">{{ block.settings.product_variant }}</span>
                {% endif %}
              </div>
            </div>
          {% endif %}
          
        </div>
      {% endfor %}
    </div>
    
    <!-- View All Link -->
    {% if section.settings.view_all_link != blank %}
      <div class="emerson-reviews__footer">
        <a href="{{ section.settings.view_all_link }}" class="emerson-reviews__view-all">
          View All Reviews
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    {% endif %}
    
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const reviewsSection = document.querySelector('.emerson-reviews');
    if (!reviewsSection) return;
    
    const cards = reviewsSection.querySelectorAll('.emerson-reviews__card');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('emerson-reviews__card--visible');
        }
      });
    }, { threshold: 0.15 });
    
    cards.forEach(card => observer.observe(card));
  });
</script>


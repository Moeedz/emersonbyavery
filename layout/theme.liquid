<!-- ========== PAGE LOADER START ========== -->
<style id="page-loader-styles">
  :root {
    --loader-bg: #FDF9F6;
    --loader-accent: #E85D75;
    --loader-bar-bg: #E8E2DB;
    --loader-duration: 1.5s;
  }

  html.is-loading { overflow: hidden; }
  html.is-loading body { overflow: hidden; }

  .page-loader {
    position: fixed;
    inset: 0;
    background: var(--loader-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999;
    transition: opacity 0.6s ease, visibility 0.6s ease;
  }

  .page-loader.is-hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .page-loader__content {
    text-align: center;
  }

  /* Logo Image */
  .page-loader__logo {
    margin-bottom: 28px;
    opacity: 0;
    animation: loaderFadeIn 0.6s ease forwards;
  }

  .page-loader__logo img {
    max-width: 180px;  /* Adjust logo size here */
    max-height: 80px;  /* Adjust max height here */
    width: auto;
    height: auto;
    object-fit: contain;
  }

  /* Progress Bar */
  .page-loader__bar {
    width: min(200px, 60vw);
    height: 3px;
    background: var(--loader-bar-bg);
    border-radius: 3px;
    overflow: hidden;
    margin: 0 auto;
    opacity: 0;
    animation: loaderFadeIn 0.6s ease 0.2s forwards;
  }

  .page-loader__progress {
    height: 100%;
    width: 0;
    background: var(--loader-accent);
    border-radius: 3px;
    animation: loaderProgress var(--loader-duration) ease forwards;
  }

  @keyframes loaderFadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes loaderProgress {
    from { width: 0; }
    to { width: 100%; }
  }

  @media (prefers-reduced-motion: reduce) {
    .page-loader__logo,
    .page-loader__bar { animation: none; opacity: 1; }
    .page-loader__progress { animation: none; width: 100%; }
    .page-loader { transition: none; }
  }
</style>

<div class="page-loader" id="pageLoader" aria-hidden="true">
  <div class="page-loader__content">
    <div class="page-loader__logo">
      <!-- OPTION 1: Hardcoded URL (replace the URL below) -->
      <img src="https://cdn.shopify.com/s/files/1/0741/8780/0826/files/EmersonByAvery_line_text_-_Brown-removebg-preview.png?v=1768397885" alt="{{ shop.name }}" />
      
      <!-- OPTION 2: Use your theme's header logo (uncomment below, comment out Option 1) -->
